<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodies.nero.foodies.HomePage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/signup_background">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="In an era where we have 24/7 access to cooking shows, magazines, and Web sites, it seems like more and more people are calling themselves &quot;foodies.&quot; Foodie used to be another term for a connoisseur of gourmet food, who turned up his nose at everyday dishes and dined at expensive five-star restaurants. That lifestyle wasn't realistic for most people."
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@color/common_google_signin_btn_text_dark_disabled" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Recipes"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/linkColor" />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/imageToDispaly"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameOfRecipe"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typrOrigin"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/discriptionOfREcipe"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
